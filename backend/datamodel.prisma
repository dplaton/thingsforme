# This is the data model that we use in our DB. This gets deployed to Prisma

type User {
    id: ID! @unique
    name: String!
    email: String! @unique
    password: String!
    wishlists: [Wishlist]!
}

type WishlistItem {
    id: ID! @unique
    title: String!
    description: String
    url: String!
    reason: String
    createdAt: DateTime!
}

type Wishlist {
    id: ID! @unique
    user: User!
    name: String!
    description: String
    items: [WishlistItem]
    createdAt: DateTime!
}
